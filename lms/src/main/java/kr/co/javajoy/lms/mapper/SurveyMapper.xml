<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.javajoy.lms.mapper.SurveyMapper">
	<select id="getSurvey"
			parameterType="int"
			resultType="kr.co.javajoy.lms.vo.Survey">
		SELECT 
			survey_no surveyNo
			,subject_no subjectNo
			,survey_question surveyQuestion
			,create_date createDate
			,update_date updateDate
		FROM survey
		WHERE subject_no = ${subjectNo}	
	</select>
	
	<insert id="insertSurveyResult"
			parameterType="java.util.Map">
		INSERT INTO survey_result
			(survey_no
			,member_id
			,result
			,create_date
			,update_date
			)
		VALUES(${surveyNo},${memberId},${resultList},NOW(),NOW())
	</insert>
</mapper>